{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "var": {
    "Color-Palette-Url": "https://colorkit.co/color-palette-generator/e00000-ff4920-ffaa00-fff41d-fffc98-b3e3ff-4a95ff/",
    "Separator": "󰻋 "
  },
  "palette": {
    "strawberry-red": "#f74444",
    "lobster-pink": "#D74E5D",
    "sweet-peony": "#D55C93",
    "violet": "#F787F3",
    "bright-lavender": "#AC77E5",
    "wisteria-blue": "#7791e6"
  },
  "terminal_background": "p:background",
  "console_title_template": "{{ .UserName }}@{{ .HostName }}",
  "enable_cursor_positioning": true,
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:strawberry-red",
          "style": "plain",
          "options": {
            "time_format": "15:04:05"
          },
          "template": "{{ .Var.Separator }} {{ .CurrentDate | date .Format }}  ",
          "type": "time"
        },
        {
          "foreground": "p:lobster-pink",
          "style": "plain",
          "template": "{{ .Var.Separator }} {{ .UserName }}  ",
          "type": "session"
        },
        {
          "foreground": "p:sweet-peony",
          "style": "plain",
          "options": {
            "style": "full"
          },
          "template": "{{ .Var.Separator }}  {{ .Path }}  ",
          "type": "path"
        },
        {
          "foreground": "p:violet",
          "options": {
            "branch_icon": "",
            "fetch_status": true
          },
          "style": "plain",
          "template": "{{ .Var.Separator }} ({{ if or (.Working.Changed) (.Staging.Changed) (gt .StashCount 0) }} {{ .HEAD }}{{ else }}{{ .HEAD }}{{ end }}{{ if (gt .Ahead 0)}} {{ .BranchStatus }}{{ end }}{{ if (gt .Behind 0)}} {{ .BranchStatus }}{{ end }}{{ if .Staging.Changed }} {{ .Staging.String }}{{ end }}{{ if .Working.Changed }} {{ .Working.String }}{{ end }})  ",
          "type": "git"
        },
        {
          "foreground": "p:bright-lavender",
          "style": "plain",
          "template": "{{ .Var.Separator }}󱖫 {{ if eq .Code 0 }}success{{ else }}failure EC {{ .Code }}{{ end }}  ",
          "options": {
            "always_enabled": true
          },
          "type": "status"
        },
        {
          "foreground": "p:wisteria-blue",
          "style": "plain",
          "template": "{{ .Var.Separator }}󱎫 {{ .FormattedMs }}  ",
          "options": {
            "always_enabled": true
          },
          "type": "executiontime"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "style": "plain",
          "foreground": "p:wisteria-blue",
          "template": "{{ if .Root }}<p:strawberry-red># </>{{ else }}<p:wisteria-blue>$ </>{{ end }}",
          "type": "session"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 3
}